' Gambas class file

Public Sub Form_Open()
  ''todo los directorios internos de imagenes
  
  Dim sFileArray As String[]
  Dim s As String
  Dim sPath As String
  Dim i As Integer
  
  sPath = Desktop.GetDirectory("PICTURES")
  ' Run directory e sub-directory
  sFileArray = RDir(sPath, "*.{png,jpg}", gb.File)
  For Each s In sFileArray
    Inc i
    ivwDesktop.Add(i, s)
  Next
  
End

Public Sub movimiento_menu_aplicaciones()
  
  Dim g As Integer
  'For f = -1 To 50 ' si fueran 10 objetos se cambia el 0 por el 10
  For g = -50 To 450
    PictureBox1.y = g ' si quieres cambiar de arriba hacia abajo cambiar x por y
    PictureBox1.x = 50 ' si quieres cambiar de arriba hacia abajo cambiar x por y
    Wait (0.001)
    ' Next
  Next
  
End

Public Sub Button1_Click()
  
  movimiento_menu_aplicaciones
  
End
