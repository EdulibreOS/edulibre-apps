Private sImage_Wall As String

Public hGetFileClient As New HttpClient As "hGetFileClient" Private sDownloadBuffer As String

Public Sub Gallery_Default()
  
  Dim i As Integer
  Dim $Files As String[]
  Dim sDir As String
  Dim sImage As String
  
  ListViewImage.Clear
  cmbselectdir.Clear
  
  For Each sDir In ["/usr/share/Innova/Wallpaper", Desktop.ConfigDir &/ "Innova/Wallpaper"]
    
    cmbselectdir.Add(sDir)
    
  Next
  
  $Files = Dir(sDir, "*.png")
  $Files.Insert(Dir(sDir, "*.jpg"))
  $Files.Insert(Dir(sDir, "*.jpeg"))
  $Files.Insert(Dir(sDir, "*.bmp"))
  
  For Each sImage In $Files
    Inc i
    ListViewImage.Add(i, sImage, Picture[sDir &/ sImage].Image.Stretch(128, 72).Picture)
    ListViewImage.Sorted = True
  Next
  'Catch
  '  Debug "ERROR [ " & DConv(Error.Text) & " ]"
  
End

Public Sub Gallery_Selection()
  
  Dim i As Integer
  Dim $Files As String[]
  Dim sDir As String
  Dim sImage As String
  
  ListViewImage.Clear
  sDir = cmbselectdir.Text
  
  $Files = Dir(sDir, "*.png")
  $Files.Insert(Dir(sDir, "*.jpg"))
  $Files.Insert(Dir(sDir, "*.jpeg"))
  $Files.Insert(Dir(sDir, "*.bmp"))
  
  For Each sImage In $Files
    Inc i
    ListViewImage.Add(i, sImage, Picture[sDir &/ sImage].Image.Stretch(128, 72).Picture)
    ListViewImage.Sorted = True
  Next
  'Catch
  '  Debug "ERROR [ " & DConv(Error.Text) & " ]"
  
End

Public Sub ListViewImage_MouseMove()
  
  Dim sDir As String
  If Not ListViewImage.FindAt(Mouse.x, Mouse.y) Then
    
    ListViewImage.Tooltip = File.BaseName(ListViewImage.Item.Text)
    
    imgPreview.Picture = Picture[sDir &/ ListViewImage.Item.Text]
  Endif
  
End

Public Sub ListViewImage_Select()
  
  txtselectwallpaper.Text = File.BaseName(ListViewImage.Item.Text)
  sImage_Wall = File.Name(ListViewImage.Item.Text)
  
End

Public Sub Form_Open()
  
  Gallery_Default
  M_Theme.Show_Theme
  ListViewImage.Background = Color.Transparent
  cmbselectdir.Background = Color.Transparent
  txtselectwallpaper.Background = Color.Transparent
  
End

Public Sub txtselectwallpaper_Change()
  
  If txtselectwallpaper.Text = Null Then
    BtnOk.Enabled = False
  Else
    BtnOk.Enabled = True
  Endif
  
End

Public Sub BtnOk_Click()
  Dim sDir As String
  
  f_settings.Show
  f_settings.btoSelWall.Text = sDir &/ sImage_Wall
  Me.Close
  
End

Public Sub BtnClose_Click()
  
  Me.Close
  
End

Public Sub ListViewImage_Click()
  
End

Public Sub cmbselectdir_Click()
  
  Gallery_Selection
  
End

Public Sub Form_KeyPress()
  
  If (key.Code = key.Esc) Then
    Me.Close
  Endif
  
End

Public Sub BtnOk_Enter()
  
  BtnOk.Background = Color.Black
  BtnOk.Foreground = Color.White
  
End

Public Sub BtnClose_Enter()
  
  BtnClose.Background = Color.Black
  BtnClose.Foreground = Color.White
  
End

Public Sub Form_Show()
  
  BtnClose.Background = Color.Background
  BtnClose.Foreground = Color.Black
  
  BtnOk.Background = Color.Background
  BtnOk.Foreground = Color.Black
  
  cmbselectdir.Background = Color.Black
  cmbselectdir.Foreground = Color.White
  
End

Public Sub PicImgFondo_MouseDown()
  
End

Public Sub ListViewImage_DblClick()
  Dim sDir As String
  
  f_settings.Show
  f_settings.tbtWallOk.Enabled = True
  f_settings.btoSelWall.Text = sDir &/ sImage_Wall
  Me.Close
  
End
