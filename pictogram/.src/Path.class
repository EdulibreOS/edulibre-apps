Public dire As String[]
Public name_ As String
Public formm As String[]
Public format_ As String
Public nameshort As String
Public directory As String

Public Sub setPath(path As String)
  
  dire = Split(path, "/")
  name_ = dire[dire.Length - 1]
  formm = Split(path, ".")
  format_ = formm[formm.Length - 1]
  nameshort = Mid(name_, 1, (Len(format_) + 1) * -1)
  directory = Mid(path, 1, (Len(name_) + 1) * -1) & "/"
  
End

Public Function getImgPath() As String
  
  Return name_
  
End

Public Function getImgFormat() As String
  
  Return format_
  
End

Public Function getNameShort() As String
  
  Return nameshort
  
End

Public Function getDirectory() As String
  
  Return directory
  
End
