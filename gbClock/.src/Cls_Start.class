Static Public Sub Main()
  
  Dim sPath As String
  
  sPath = Desktop.ConfigDir &/ "Innova"
  
  If Not Exist(sPath &/ "gbClock.conf") Or Not Exist(sPath &/ "Widget/Themes_Clock") Then
    M_Settings.Init_Settings_gbClock
  Endif
  M_Settings.Theme_Application
  f_Clock.Show
  Wait 0.1
  
End
