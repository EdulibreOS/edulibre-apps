Public Sub btn_regresar_Click()

  If lblmnuprincipal.Text == "Pre escolar"
    PrePrimaria()
  Else If lblmnuprincipal.Text == "Primaria Primer Ciclo"  
    Primaria()
  Else 'Primaria2
    Primaria2()
  Endif
  
End


