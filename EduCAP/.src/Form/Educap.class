  lbl_titulo.Text = "PrePrimaria"
  lbl_edad.Text = "6 años"
  Print Application.Path
  pbox_icono.Picture = Picture.Load(Application.Path & "/Images/PreEscolar.png")
  
  pbox_icono.Visible = True
