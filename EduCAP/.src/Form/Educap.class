Public Sub btn_regresar_Click()

  If lblmnuprincipal.Text == "PrePrimaria"
    PrePrimaria()
  Else If lblmnuprincipal.Text == "Primaria Primer Ciclo"  
    Primaria()
  Else 'Primaria2
    Primaria2()
  Endif
  
End

Public Sub pbox_regresar_DblClick()

  If lblmnuprincipal.Text == "PrePrimaria"
    PrePrimaria()
  Else If lblmnuprincipal.Text == "Primaria Primer Ciclo"  
    Primaria()
  Else 'Primaria2
    Primaria2()
  Endif  

End
